@page
@model IndexModel
@{
    ViewData["Title"] = "Auto Seeder";
}

<h1>Auto Seeder</h1>

<form method="post">
    <div>
        <label for="schema">Table schema</label><br />
        <textarea id="schema"
                  name="SchemaText"
                  rows="12"
                  cols="100">@Model.SchemaText</textarea>
    </div>

    <br />

    <button type="submit">Generate seed</button>
</form>

@if (!string.IsNullOrEmpty(Model.SeedSql))
{
    <hr />
    <h2>Generated seed</h2>
    <pre>@Model.SeedSql</pre>
}